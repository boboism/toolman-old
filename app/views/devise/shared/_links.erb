<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.sessions.sign_in'), new_session_path(resource_name), :class => 'btn-edit' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.registrations.sign_up'), new_registration_path(resource_name), :class => 'btn-edit' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t('devise.passwords.forgot'), new_password_path(resource_name), :class => 'btn-edit' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.confirmations.not_receive'), new_confirmation_path(resource_name), :class => 'btn-edit' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.unlocks.not_receive'), new_unlock_path(resource_name), :class => 'btn-edit' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t('devise.sessions.sign_in_with_provider',:provider => provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), :class => 'btn-edit' %>
  <% end -%>
<% end -%>
