<%- model_class = QualityDeviationReport.new.class -%>
<% content_for :breadcrumb do %>
  <li><%= link_to t('views.home.title', default: 'Home'), root_path %></li>
  <li><span class='divider'>/</span></li>
  <li><%=t '.title', default: model_class.model_name.human.pluralize %></li>
<% end %>
<h1><%=t '.title', default: model_class.model_name.human.pluralize %></h1>

<div class='operation-group'>
  <div class='action-group'>
    <%= link_to t('.new', default: t('helpers.links.new')), new_quality_deviation_report_path, class: 'btn-new' %>    
  </div>
</div>

<table class='table-listed'>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:doc_no) %></th>
      <th><%= model_class.human_attribute_name(:doc_date) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:assembly_tool) %></th>
      <th><%= model_class.human_attribute_name(:happen_time) %></th>
      <th><%= model_class.human_attribute_name(:confirmed) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= t('.actions', default: t('helpers.actions')) %></th>
    </tr>
  </thead>
  <tbody>
    <% @quality_deviation_reports.each do |quality_deviation_report| %>
      <tr>
        <td><ol>
            <li><b><%= model_class.human_attribute_name(:category_1) %>: </b><%= quality_deviation_report.category_1 %></li>
            <li><b><%= model_class.human_attribute_name(:category_2) %>: </b><%= quality_deviation_report.category_2 %></li>
            <li><b><%= model_class.human_attribute_name(:category_3) %>: </b><%= quality_deviation_report.category_3 %></li>
            <li><b><%= model_class.human_attribute_name(:category_4) %>: </b><%= quality_deviation_report.category_4 %></li>
            <li><b><%= model_class.human_attribute_name(:category_5) %>: </b><%= quality_deviation_report.category_5 %></li>
            <li><b><%= model_class.human_attribute_name(:category_6) %>: </b><%= quality_deviation_report.category_6 %></li>
        </ol></td>
        <td><%= quality_deviation_report.doc_no %></td>
        <td><%= l quality_deviation_report.doc_date %></td>
        <td><%= quality_deviation_report.title %></td>
        <td><%= quality_deviation_report.assembly_tool %></td>
        <td><%= l quality_deviation_report.happen_start_time %>
            <br><%= t('.to', :default => '~') %><br>
            <%= l quality_deviation_report.happen_end_time %>
        </td>
        <td><%= t(quality_deviation_report.confirmed.to_s) %></td>
        <td><%= l(quality_deviation_report.created_at) %></td>
        <td><div class='btn-group'>
          <%= link_to t('.show', default: t('helpers.links.show')), quality_deviation_report, class: 'btn-show' %>
          <%= link_to t('.edit', default: t('helpers.links.edit')), edit_quality_deviation_report_path(quality_deviation_report), class: 'btn-edit' %>
          <%= link_to t('.confirm', default: t('helpers.links.confirm')), confirm_quality_deviation_report_path(quality_deviation_report), :method => :put, class: 'btn-edit' %>
          <%= link_to t('.destroy', default: t('helpers.links.destroy')), quality_deviation_report, confirm: t('.confirm', default: t('helpers.links.destroy_confirm', default: 'Are you sure?')), method: :delete, class: 'btn-destroy' %></div></td>
        </td>
      </tr>
    <% end %>
  </tbody>  
</table>
