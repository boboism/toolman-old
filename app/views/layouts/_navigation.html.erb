<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">

      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <%= link_to (content_for?(:title) ? yield(:title) : t('views.application.title', :default => 'Toolman')), root_path, :class => 'brand' %>

      <div class="nav-collapse float-right">
        <ul class="nav">
          <li class="active"><%= link_to t('views.home.title', :default => 'Home'), root_path %></li>

          <% if user_signed_in? %>
            <li><%= link_to(t('views.application.edit_account', :name => current_user.nickname || current_user.name, :default => 'Edit account'), edit_user_registration_path) %></li>
          <% end %>

          <% if user_signed_in? %>
            <li><%= link_to(t('views.application.logout', :default => 'Logout'), destroy_user_session_path, :method=>'delete') %></li>
          <% else %>
            <li><%= link_to(t('views.application.login', :default => 'Login'), new_user_session_path)  %></li>
          <% end %>

        </ul>
      </div><!--/.nav-collapse -->

    </div>
  </div>
</div>
