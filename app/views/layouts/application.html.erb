<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title><%= content_for?(:title) ? yield(:title) : t('views.application.title') %></title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "bootstrap_and_overrides" %>
    <!--[if IE 6]>
    <%= stylesheet_link_tag "ie6" %>
    <![endif]-->
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <%= render 'layouts/navigation' %>

    <div class="container master-container">
      <% if user_signed_in? %>
        <ul class="breadcrumb">
          <%= yield :breadcrumb %>
        </ul>
      <% end %>

      <%= render 'layouts/messages' %>

      <%= yield %>

      <!--<%= render 'layouts/footer' %>-->
    </div><!--! end of .container -->

    <!-- Placed at the end of the document so the pages load faster -->

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <%= javascript_include_tag "html5" %>
    <![endif]-->
    <!-- install google chrome framework for ie user -->
    <!-- javascript_include_tag "CFInstall.min" -->
    
    <%= javascript_include_tag "application" %>
  </body>
</html>
