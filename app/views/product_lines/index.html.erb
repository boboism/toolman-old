<h1>Listing product_lines</h1>

<table class='table table-striped table-bordered'>
  <thead>
  <tr>
     <th>Name</th>
     <th>Description</th>
     <th>Created At</th>
     <th colspan='3'>Operations</th>
    </tr>
  </thead>
  <tbody>
    <% @product_lines.each do |product_line| %>
      <tr>
        <td><%= product_line.name %></td>
        <td><%= product_line.description %></td>
        <td><%= product_line.created_at.in_time_zone %></td>
        <td>
          <%= link_to 'Show', product_line, :class => 'btn btn-small' %>
          <%= link_to 'Edit', edit_product_line_path(product_line), :class => 'btn btn-small btn-primary' %>
          <%= link_to 'Destroy', product_line, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-small btn-danger' %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Product line', new_product_line_path %>
