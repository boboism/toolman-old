<%= simple_form_for(@quality_category) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :quality_type, :collection => QualityCategory.quality_type_selection, :as => :radio_buttons, :item_wrapper_class => :inline %>
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
