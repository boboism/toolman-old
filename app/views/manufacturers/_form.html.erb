<%= simple_form_for(@manufacturer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :company_name %>
    <%= f.input :address %>
    <%= f.input :postbox %>
    <%= f.input :tel %>
    <%= f.input :linkman %>
    <%= f.input :website %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
